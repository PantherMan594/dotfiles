# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym $alt+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +10% #decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym $alt+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -10% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute alsa_input.pci-0000_00_1f.3.analog-stereo toggle

# Sreen brightness controls
bindsym Shift+XF86MonBrightnessUp exec xbacklight -inc 0.5 # increase screen brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 2 # increase screen brightness
bindsym $alt+XF86MonBrightnessUp exec xbacklight -inc 5 # increase screen brightness
bindsym Shift+XF86MonBrightnessDown exec xbacklight -dec 0.5 # decrease screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 2 # decrease screen brightness
bindsym $alt+XF86MonBrightnessDown exec xbacklight -dec 5 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Move workspace to other monitor
bindsym $mod+Shift+greater move workspace to output right
bindsym $mod+Shift+less move workspace to output left
bindsym $mod+Shift+bracketright move workspace to output down
bindsym $mod+Shift+bracketleft move workspace to output up

# Rotate screen
bindsym $mod+$alt+Up exec xrandr --output eDP1 --rotate normal 
bindsym $mod+$alt+Left exec xrandr --output eDP1 --rotate left
bindsym $mod+$alt+Right exec xrandr --output eDP1 --rotate right 
bindsym $mod+$alt+Down exec xrandr --output eDP1 --rotate inverted

# Screenshot
bindsym $mod+Shift+s exec --no-startup-id ~/.scripts/screenshot.sh -s
bindsym Print exec --no-startup-id ~/.scripts/screenshot.sh -s

# Clear clipboard formatting
bindsym Control+Shift+v exec --no-startup-id xclip -o -sel clip | xclip -sel clip && sleep 0.1 && xdotool key Ctrl+v

# Set wallpaper
exec_always --no-startup-id ~/.scripts/wallpaper.sh

# Set autolock after 2 min of inactivity
